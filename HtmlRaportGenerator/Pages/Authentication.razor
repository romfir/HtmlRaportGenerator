@attribute [RouteAttribute("/" + RelativePageUrls.Authentication + "/{action}")]

@inject MonthStateService monthStateService

<RemoteAuthenticatorView Action="@Action"
                         OnLogInSucceeded="() => monthStateService.LoadConfigurationFromGoogleDriveAsync()"
                         OnLogOutSucceeded="() => monthStateService.ChangeDataStoreAsync(DataStore.LocalStorage)">

    <CompletingLoggingIn>
        <PageProgress Visible="true" />
    </CompletingLoggingIn>

    <CompletingLogOut>
        <PageProgress Visible="true" />
    </CompletingLogOut>
    <LoggingIn>
        <PageProgress Visible="true" />
    </LoggingIn>
    <LogOut>
        You are logged out.
    </LogOut>

</RemoteAuthenticatorView>

@code{
    [Parameter]
    public string Action { get; set; } = null!;
}
